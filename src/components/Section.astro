---
export interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<div class={`space-y-6 ${className || ''}`}>
  <h2 class="text-2xl font-bold">{title}</h2>
  <div class="space-y-4 prose prose-lg dark:prose-invert max-w-none">
    <slot />
  </div>
</div>
---
export interface Props {
  title: string;
  wide?: boolean;
}

import "../styles/tw.css";
import Header from '../components/Header.astro';

const { title, wide = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <script is:inline>
      (function () {
        const savedTheme = localStorage.getItem("theme");
        const isDark = savedTheme ? savedTheme === "dark" : 
          window.matchMedia("(prefers-color-scheme: dark)").matches;

        document.documentElement.classList.toggle("dark", isDark);
      })();
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
        <link
          rel="icon"
          type="image/png"
          href="https://wisp.rex.wf/x/himanshustwts"
        />
        <meta name="title" content={title} />
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:image" content="https://wisp.rex.wf/x/himanshustwts" />
        <meta property="og:description" content="AI Researcher & SDE. Building at the intersection of AI and real-world challenges." />
        {/* X (Twitter) 2025 Meta Tags */}
        <meta name="x:card" content="summary" />
        <meta name="x:site" content="@himanshustwts" />
        <meta name="x:creator" content="@himanshustwts" />
        <meta name="x:title" content={title} />
        <meta name="x:description" content="AI Researcher & SDE. Building at the intersection of AI and real-world challenges." />
        <meta name="x:image" content="https://wisp.rex.wf/x/himanshustwts" />
        {/* Legacy Twitter Tags for Backward Compatibility */}
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@himanshustwts" />
        <meta name="twitter:creator" content="@himanshustwts" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content="AI Researcher & SDE. Building at the intersection of AI and real-world challenges." />
        <meta name="twitter:image" content="https://wisp.rex.wf/x/himanshustwts" />
      <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Newsreader:ital,opsz,wght@0,6..72,200..800;1,6..72,200..800&family=Geist+Mono:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.css"
      integrity="sha384-GvrOXuhMATgEsSwCs4smul74iXGOixntILdUW9XmUC6+HX0sLNAK3q71HotJqlAn"
      crossorigin="anonymous"
    />
    <title>{title}</title>
    <style>
      /* Removed appear animation */
    </style>
  </head>
  <body
    class="flex flex-col min-h-screen items-center bg-gruvbox-light-bg text-gruvbox-light dark:bg-gruvbox-dark-bg dark:text-gruvbox-dark"
  >
    <div class="w-full sm:w-4/5 py-6 sm:py-8 md:py-12 lg:w-3/5 px-6 md:w-2/3 max-w-4xl relative">
      <Header wide={wide} />
      <main class="break-words prose prose-lg dark:prose-invert max-w-none">
        <div class="not-prose">
          <slot />
        </div>
      </main>
    </div>
  </body>
  <script>
    // Theme toggle functionality
    document
      .getElementById("theme-toggle")
      ?.addEventListener("click", function () {
        const isDark = document.documentElement.classList.toggle("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");
      });
  </script>
</html>

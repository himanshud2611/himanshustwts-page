---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import ExternalLinkIcon from '../components/ExternalLinkIcon.astro';

interface Reading {
  title: string;
  url: string;
  description: string;
  date: string;
  source?: string;
}

const readings: Reading[] = [
  {
    title: "China's AI Landscape: a free-for-all, not a central plan.",
    url: "https://www.chinatalk.media/p/chinas-ai-landscape-a-free-for-all",
    description: "Dude, this is how China surprises us every other day.",
    date: "2026-02-01",
    source: "ChinaTalk"
  },
  {
    title: "Coding Agents As An Interface To The Codebase",
    url: "https://lesswrong.com/posts/SM2Fr54AvBYQLmi9D/coding-agents-as-an-interface-to-the-codebase",
    description: "The sudden shift in coding interfaces and operating at a higher level of abstraction.",
    date: "2026-01-11",
    source: "LessWrong"
  },
  {
    title: "You will be OK",
    url: "https://www.lesswrong.com/posts/fwQburGDyGoSSweT9/you-will-be-ok",
    description: "A thoughtful piece about resilience and perspective in uncertain times.",
    date: "2026-01-11",
    source: "LessWrong"
  },
  // Add more readings here
];

const sortedReadings = readings.sort((a, b) => {
  const dateA = new Date(a.date).getTime();
  const dateB = new Date(b.date).getTime();
  return dateB - dateA;
});
---

<Layout title="Readings" wide={true}>
  <div class="space-y-8 max-w-4xl mx-auto">
    <div class="space-y-2">
      <h1 class="text-3xl md:text-4xl font-medium">Readings</h1>
      <p class="text-lg text-gruvbox-light/70 dark:text-gruvbox-dark/70">
        Articles, blog posts, and papers I'm reading and finding interesting.
      </p>
    </div>

    <ul class="space-y-6" style="list-style: none; padding-left: 0;">
      {sortedReadings.map((reading) => (
        <li class="space-y-1" style="list-style: none;">
          <div class="flex gap-2">
            <span class="text-gruvbox-light dark:text-gruvbox-dark">â€¢</span>
            <div class="flex-1 space-y-1">
              <a
                href={reading.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-lg font-medium text-gruvbox-light-accent dark:text-gruvbox-dark-accent hover:opacity-80 transition-opacity"
              >
                {reading.title}<span class="inline-block -mb-2"><ExternalLinkIcon /></span>
              </a>
              <p class="text-gruvbox-light/70 dark:text-gruvbox-dark/70">
                {reading.description}
              </p>
              <div class="flex items-center gap-3 text-sm text-gruvbox-light/60 dark:text-gruvbox-dark/60">
                <time>{new Date(reading.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}</time>
                {reading.source && (
                  <span>{reading.source}</span>
                )}
              </div>
            </div>
          </div>
        </li>
      ))}
    </ul>

    {readings.length === 0 && (
      <div class="text-center py-12 text-gruvbox-light/60 dark:text-gruvbox-dark/60">
        <p>No readings yet. Check back soon!</p>
      </div>
    )}
  </div>
</Layout>

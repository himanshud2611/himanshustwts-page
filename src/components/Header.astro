---
import ExternalLinkIcon from "./ExternalLinkIcon.astro";

interface Props {
  wide?: boolean;
}

const { wide = false } = Astro.props;
---
<header class="w-full mb-14">
    <nav class={`flex justify-between items-center gap-4 mb-8 ${wide ? "" : "max-w-3xl"}`}>
        <div class="flex items-center gap-4">
            <div class="flex flex-wrap gap-x-4 gap-y-2 text-gruvbox-light/70 dark:text-gruvbox-dark/70">
                <a class="text-base hover:text-gruvbox-light-accent dark:hover:text-gruvbox-dark-accent transition-colors" href="/">Home</a>
                <a class="text-base hover:text-gruvbox-light-accent dark:hover:text-gruvbox-dark-accent transition-colors" href="/posts">Posts</a>
                <a class="text-base hover:text-gruvbox-light-accent dark:hover:text-gruvbox-dark-accent transition-colors inline-flex items-center gap-1.5 whitespace-nowrap" href="/podcasts">
                    Podcasts
                    <span class="text-[10px] leading-none px-1.5 py-0.5 font-medium bg-amber-500 dark:bg-orange-600 text-white shadow-[0_0_10px_rgba(245,158,11,0.5)] dark:shadow-[0_0_8px_rgba(234,88,12,0.5)] rounded-full">new</span>
                </a>
                <a class="text-base hover:text-gruvbox-light-accent dark:hover:text-gruvbox-dark-accent transition-colors whitespace-nowrap" href="https://youtube.com/@Ground_ZeroYT" target="_blank" rel="noopener noreferrer">
                    <span class="hidden sm:inline">YouTube</span>
                    <span class="sm:hidden">YT</span>
                    <ExternalLinkIcon />
                </a>
            </div>
            <!-- <a 
                href="https://twitter.com/himanshustwts" 
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-base text-gruvbox-light/70 dark:text-gruvbox-dark/70 hover:text-gruvbox-light-accent dark:hover:text-gruvbox-dark-accent transition-colors"
            >
                <svg class="w-4 h-4 mr-1" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                <span>@himanshustwts</span>
            </a> -->
        </div>
        <button 
            class="p-2 pt-1 md:pt-2 rounded-full text-gruvbox-light/70 dark:text-gruvbox-dark/70 hover:text-gruvbox-light-accent dark:hover:text-gruvbox-dark-accent transition-colors cursor-pointer" 
            id="theme-toggle"
            aria-label="Toggle theme"
        >
            <svg class="block dark:hidden w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
            <svg class="hidden dark:block w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
        </button>
    </nav>
</header>